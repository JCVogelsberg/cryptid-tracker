<% content_for(:title, "New Sighting") %>
<%= form_for @sighting do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <%= f.label :Cryptid_type %><br>
    <%= f.text_field :name, :class => "form-control blue-back"%>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "form-control blue-back"%>
  </div>

  <div class="form-group">
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude, :class => "form-control blue-back"%>
  </div>

  <div class="form-group">
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude, :class => "form-control blue-back" %>
  </div><br>

  <%= f.submit(:class => "btn btn-primary")%>

<% end %>

